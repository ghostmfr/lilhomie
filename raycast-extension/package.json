{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "homie",
  "title": "Homie",
  "description": "Control your HomeKit devices with natural language",
  "icon": "extension-icon.png",
  "author": "ghostmfr",
  "categories": ["Applications", "Productivity"],
  "license": "MIT",
  "commands": [
    {
      "name": "devices",
      "title": "List Devices",
      "description": "Show all HomeKit devices",
      "mode": "view"
    },
    {
      "name": "toggle",
      "title": "Toggle Device",
      "description": "Toggle a device on or off",
      "mode": "view",
      "arguments": [
        {
          "name": "device",
          "placeholder": "Device name",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "scenes",
      "title": "Scenes",
      "description": "Trigger HomeKit scenes",
      "mode": "view"
    },
    {
      "name": "quick-toggle",
      "title": "Quick Toggle",
      "description": "Quickly toggle a device by name",
      "mode": "no-view",
      "arguments": [
        {
          "name": "device",
          "placeholder": "Device name",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.10.4",
    "@types/react": "18.2.45",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
